@model BusStationSystem.ViewModels.TicketVM

<br />
<h2 class="text-center"><strong>Квиток для маршруту</strong></h2>
<br />
<div class="container-fluid h-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-sm-3 col-10 offset-2 offset-sm-0">
            <form asp-action="SellTicket">
                <div class="form-group">
                    <input asp-for="RouteNumber" value="@Model.RouteNumber" hidden />
                </div>
                <div class="form-group">
                    <label asp-for="ClientID" class="control-label">Продати</label>
                    <input asp-for="ClientID" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Зберегти" class="btn btn-lg btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>