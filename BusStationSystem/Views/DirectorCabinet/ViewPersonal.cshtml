@model PersonalVM
@{
    ViewData["Title"] = "Перегляд працівників";
}

<br />
<h2 class="text-center"><strong>Дані працівників</strong></h2>
<br />
<table class="table">
    <tr><th>Ім'я та прізвище</th><th></th><th></th><th></th></tr>
    @foreach (var user in Model.Employees)
    {
        <tr>
            <td>@user.Name</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">Редагувати</a>
            </td>
            <td>
                <form asp-action="ViewActivety" asp-route-id="@user.Id" method="get">
                    <button type="submit" class="btn btn-sm btn-success">
                        Активність
                    </button>
                </form>
            </td>
            <td>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Видалити
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<br />
<h2 class="text-center"><strong>Дані директорів</strong></h2>
<br />
<table class="table">
    <tr><th>Ім'я та прізвище</th><th></th></tr>
    @foreach (var user in Model.Directors)
    {
        <tr>
            <td>@user.Name</td>            
            <td>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Видалити
                    </button>
                </form>
            </td>
        </tr>
    }
</table>