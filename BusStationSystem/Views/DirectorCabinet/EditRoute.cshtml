@model RouteVM;
@{
    ViewData["Title"] = "Редагування";
}

<br />
<h2 class="text-center"><strong>Редагування даних маршуту</strong></h2>
<br />
<div class="container-fluid h-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-sm-3 col-10 offset-2 offset-sm-0">
            @using (Html.BeginForm("EditRoute", "DirectorCabinet", FormMethod.Post))
            {
                <div asp-validation-summary="All"></div>
                <input asp-for="Id" hidden>
                <div class="form-group">
                    <input asp-for="Price" class="form-control" placeholder="Price">
                </div>
                <div class="form-group">
                    <select asp-for="Departure" asp-items="@Model.Departures" class="form-control"></select>
                </div>
                <div class="form-group">
                    <input asp-for="DetartureDate" class="form-control" placeholder="ProductionYear">
                </div>
                <div class="form-group">
                    <select asp-for="Arrival" asp-items="@Model.Arrivals" class="form-control"></select>
                </div>
                <div class="form-group">
                    <input asp-for="ArrivalDate" class="form-control" placeholder="ProductionYear">
                </div>
                <div class="form-group">
                    <select asp-for="Bus" asp-items="@Model.Buses" class="form-control"></select>
                </div>
                <div class="form-group col-6 offset-3">
                    <input type="submit" value="Додати" class="btn btn-lg btn-block" />
                </div>
            }
        </div>
    </div>
</div>
